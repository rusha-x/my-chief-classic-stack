<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowView"
        app:srcCompat="@drawable/ingredient_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:id="@+id/nameItemView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="NameItem"
        android:textSize="30sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/arrowView"
        app:layout_constraintEnd_toStartOf="@id/countView"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="16dp" />

    <TextView
        android:id="@+id/countView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="13"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameItemView"
        app:layout_constraintBottom_toBottomOf="@id/nameItemView"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
